{% extends "@FOSUser/layout.html.twig" %}

{% block rest %}nav-expanded nav-active{% endblock %}
{% block restadd %}class="nav-active"{% endblock %}

{% block body %}

<!-- start: page -->
<div class="row">
	<div class="col-lg-12">
		<section class="panel">
			<header class="panel-heading">
				<div class="panel-actions">
					<a href="#" class="fa fa-caret-down"></a>
					<a href="#" class="fa fa-times"></a>
				</div>

				<h2 class="panel-title">Ajouter un Restaurant</h2>
			</header>
			<div class="panel-body">
                {{ form_start(form, { attr : { 'class' : 'form-horizontal form-bordered' }}) }}
					<div class="form-group">
						<label class="col-md-3 control-label" for="inputDefault">Nom du Restaurant</label>
						<div class="col-md-6">
                            {{ form_widget(form.name, { attr : { 'class' : 'form-control', 'id' : 'inputDefault' }}) }}
						</div>
					</div>
                    <div class="form-group">
						<label class="col-md-3 control-label" for="inputDefault">Ville</label>
						<div class="col-md-6">
							{{ form_widget(form.city, { attr : { 'class' : 'form-control', 'id' : 'inputDefault' }}) }}
						</div>
					</div>
                    <div class="form-group">
						<label class="col-md-3 control-label" for="inputDefault">Adresse</label>
						<div class="col-md-6">
							{{ form_widget(form.address, { attr : { 'class' : 'form-control', 'id' : 'inputDefault' }}) }}
						</div>
					</div>

					<div class="form-group">
						<label class="col-md-3 control-label">Image Facade</label>
						<div class="col-md-6">
							<div class="fileupload fileupload-new" data-provides="fileupload">
								<div class="input-append">
									<div class="uneditable-input">
										<i class="fa fa-file fileupload-exists"></i>
										<span class="fileupload-preview"></span>
									</div>
									<span class="btn btn-default btn-file">
										<span class="fileupload-exists">Change</span>
										<span class="fileupload-new">Select file</span>
										{{ form_widget(form.image.file) }}
									</span>
									<a href="#" class="btn btn-default fileupload-exists" data-dismiss="fileupload">Remove</a>
								</div>
							</div>
						</div>
					</div>
                    
                    <div class="form-group">
						<label class="col-md-3 control-label" for="inputDefault"></label>
						<div class="col-md-6">
							<button type="submit" class="mb-xs mt-xs mr-xs btn btn-success">Ajouter</button>
						</div>
					</div>
				{{ form_end(form) }}
			</div>
		</section>
	</div>
</div>
<!-- end: page -->

{% endblock %}
