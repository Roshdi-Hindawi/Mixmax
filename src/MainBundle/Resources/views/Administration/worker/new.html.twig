{% extends '@FOSUser/layout.html.twig' %}

{% block worker %}nav-expanded nav-active{% endblock %}
{% block workeradd %}class="nav-active"{% endblock %}

{% block body %}

<!-- start: page -->
<div class="row">
	<div class="col-lg-12">
		<section class="panel">
			<header class="panel-heading">
				<div class="panel-actions">
					<a href="#" class="fa fa-caret-down"></a>
					<a href="#" class="fa fa-times"></a>
				</div>

				<h2 class="panel-title">Ajouter Un Employer</h2>
			</header>
			<div class="panel-body">
				{{ form_start(form, { attr : { 'class' : 'form-horizontal form-bordered' }}) }}
				<div class="form-group">
					<label class="col-md-3 control-label" for="inputDefault">Nom et prenom</label>
					<div class="col-md-6">
						{{ form_widget(form.name, { attr : { 'class' : 'form-control', 'id' : 'inputDefault' }}) }}
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-3 control-label" for="inputDefault">Telephone</label>
					<div class="col-md-6">
						{{ form_widget(form.phone, { attr : { 'class' : 'form-control', 'id' : 'inputDefault' }}) }}
					</div>
				</div>
                <div class="form-group">
					<label class="col-md-3 control-label" for="inputDefault">Genre</label>
					<div class="col-md-6">
						{{ form_widget(form.gender, { attr : { 'class' : 'form-control', 'id' : 'inputDefault' }}) }}
					</div>
				</div>
				<div class="form-group">
					
					<div class="col-md-6">
						{{ form_widget(form.birthdate, { attr : { 'class' : 'form-control', 'id' : 'date' }}) }}
					</div>
				</div>
                <div class="form-group">
					<label class="col-md-3 control-label" for="inputDefault">Restaurant</label>
					<div class="col-md-6">
						{{ form_widget(form.facility, { attr : { 'class' : 'form-control', 'id' : 'inputDefault' }}) }}
					</div>
				</div>
                <div class="form-group">
					<label class="col-md-3 control-label" for="inputDefault">Situation</label>
					<div class="col-md-6">
						{{ form_widget(form.status, { attr : { 'class' : 'form-control', 'id' : 'inputDefault' }}) }}
					</div>
				</div>
                <div class="form-group">
					<label class="col-md-3 control-label" for="inputDefault">Poste</label>
					<div class="col-md-6">
						{{ form_widget(form.post, { attr : { 'class' : 'form-control', 'id' : 'inputDefault' }}) }}
					</div>
				</div>
                <div class="form-group">
					<label class="col-md-3 control-label" for="inputDefault">Salaire</label>
					<div class="col-md-6">
						{{ form_widget(form.salary, { attr : { 'class' : 'form-control', 'id' : 'inputDefault' }}) }}
					</div>
				</div>
                <div class="form-group">
					<label class="col-md-3 control-label" for="inputDefault">Date Debut</label>
					<div class="col-md-6">
						{{ form_widget(form.startDate, { attr : {  'id' : 'inputDefault' }}) }}
					</div>
				</div>

				<div class="form-group">
					<label class="col-md-3 control-label">Image</label>
					<div class="col-md-6">
						<div class="fileupload fileupload-new" data-provides="fileupload">
							<div class="input-append">
								<div class="uneditable-input">
									<i class="fa fa-file fileupload-exists"></i>
									<span class="fileupload-preview"></span>
								</div>
								<span class="btn btn-default btn-file">
									<span class="fileupload-exists">Change</span>
									<span class="fileupload-new">Select file</span>
									{{ form_widget(form.image.file) }}
								</span>
								<a href="#" class="btn btn-default fileupload-exists" data-dismiss="fileupload">Remove</a>
							</div>
						</div>
					</div>
				</div>
				
				<div class="form-group">
					<label class="col-md-3 control-label" for="inputDefault"></label>
					<div class="col-md-6">
						<button type="submit" class="mb-xs mt-xs mr-xs btn btn-lg btn-success">Ajouter</button>
					</div>
				</div>
                {{ form_end(form) }}

			</div>
		</section>
	</div>
</div>
<!-- end: page -->

{% endblock %}
